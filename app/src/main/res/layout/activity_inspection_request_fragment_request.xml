<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/activity_inspection_request_fragment_request_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/inspections_requests_list_item_text_view_margin"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/activity_inspection_request_fragment_request_name"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/inspections_requests_list_item_text_view_margin"
        style="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintTop_toBottomOf="@+id/activity_inspection_request_fragment_request_number"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/activity_inspection_request_fragment_request_phoneNumber"
        android:drawableStart="@drawable/ic_phone_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/inspections_requests_list_item_text_view_margin"
        style="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintTop_toBottomOf="@+id/activity_inspection_request_fragment_request_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/activity_inspection_request_fragment_request_address"
        android:drawableStart="@drawable/ic_location_on_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/inspections_requests_list_item_text_view_margin"
        style="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintTop_toBottomOf="@+id/activity_inspection_request_fragment_request_phoneNumber"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/activity_inspection_request_fragment_request_status"
        android:drawableStart="@drawable/ic_info_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/inspections_requests_list_item_text_view_margin"
        style="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintTop_toBottomOf="@+id/activity_inspection_request_fragment_request_address"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/activity_inspection_request_fragment_request_appointment"
        android:drawableStart="@drawable/ic_baseline_calendar_today_24px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/inspections_requests_list_item_text_view_margin"
        style="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintTop_toBottomOf="@+id/activity_inspection_request_fragment_request_status"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/activity_inspection_request_fragment_request_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        app:layout_constraintTop_toBottomOf="@+id/activity_inspection_request_fragment_request_appointment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
